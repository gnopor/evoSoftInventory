{
    "name": "t-blaise-gnopor-nextjs-boilerplate",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build && next export && mv out/404/index.html out/404.html && rm -r out/404/",
        "start": "next start",
        "lint": "next lint",
        "deploy": "npm run build && firebase deploy --only hosting:webapp && rm -r out/ ",
        "deploy-ci": "npm run build && firebase deploy --only hosting:webapp --token $FIREBASE_TOKEN && rm -r out/"
    },
    "dependencies": {
        "bootstrap": "^5.1.3",
        "crypto-js": "^4.1.1",
        "nanoid": "^3.2.0",
        "next": "^13.2.4",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "@types/crypto-js": "^4.1.1",
        "@types/node": "^18.15.5",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "eslint": "^8.15.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-next": "^12.2.5",
        "typescript": "^5.0.2"
    }
}
